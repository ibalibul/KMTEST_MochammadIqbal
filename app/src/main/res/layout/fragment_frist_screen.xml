<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FristScreenFragment">

    <ImageView
        android:id="@+id/image"
        android:src="@drawable/img"
        android:layout_marginTop="132dp"
        android:layout_centerHorizontal="true"
        android:layout_width="116dp"
        android:layout_height="116dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldName"
        android:layout_below="@+id/image"
        android:layout_marginTop="20dp"
        android:layout_marginRight="33dp"
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldPalindrome"
        android:layout_below="@+id/textFieldName"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="33dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Palindrome">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_Chack"
        android:text="Check"
        android:backgroundTint="@color/dongker"
        android:layout_below="@+id/textFieldPalindrome"
        android:layout_marginTop="45dp"
        android:layout_marginRight="33dp"
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_Next"
        android:text="Next"
        android:backgroundTint="@color/dongker"
        android:layout_below="@+id/btn_Chack"
        android:layout_marginTop="15dp"
        android:layout_marginRight="33dp"
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>